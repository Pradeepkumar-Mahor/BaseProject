@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles Management";
    int srNo = 1;
}


<section class="section">

    <div class="row d-flex justify-content-center">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title form-title">
                        Role list
                    </h5>
                    <div class="itemContainer pb-2 mb-2">
                        <div class="item">
                            <a class="btn btn-sm btn-info" asp-action="Create">
                                <i class="bi bi-plus"></i> Create Role
                            </a>
                        </div>
                        <div class="item">
                            <a class="btn btn-sm btn-outline-success" asp-action="Excel">
                                <i class="bi bi-file-earmark-excel-fill"></i> Excel
                            </a>
                        </div>
                    </div>

                    <table class="table table-hover table-bordered ">
                        <thead class="tbl-header">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(Model => Model.Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(Model => Model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(Model => Model.NormalizedName)
                                </th>
                                <th>

                                </th>
                            </tr>
                        </thead>
                        @if (Model is not null)
                        {
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="text-center">
                                        <td >
                                            @srNo
                                        </td>
                                        <td>@Html.DisplayFor(Modelitem => item.Name)</td>
                                        <td>@Html.DisplayFor(Modelitem => item.NormalizedName)</td>
                                        <td class="text-right">
                                            <div class="btn-group">
                                                <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#"
                                                   data-bs-toggle="dropdown" aria-expanded="false">
                                                    <span class="d-none d-md-block dropdown-toggle ps-2">Action</span>
                                                </a>
                                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile" style="">

                                                    <li>
                                                        <a class="dropdown-item">
                                                            <i class="fas fa-pencil-alt"></i> Edit
                                                        </a>
                                                    <li>
                                                        <hr class="dropdown-divider">
                                                    </li>
                                                    <li>
                                                        <form asp-area="AppAdmin" asp-controller="Roles" asp-action="DeleteRole"
                                                                asp-route-id="@item.Id" method="post">
                                                            <button type="button" class="dropdown-item btn btn-danger"
                                                                    onclick="return functionConfirm(this,'@item.Name')">
                                                                <i class="fas fa-trash-alt"></i> Delete</button>
                                                        </form>
                                                    <a class="dropdown-item" style='cursor:pointer; width:100px;'
                                                           onclick='Delete("/AppAdmin/Roles/DeleteRole/@item.Id","@item.Name")'
                                                           >
                                                            <i class="fas fa-trash-alt"></i>
                                                            Delete</a>
                                                    </li>
                                                    <li>
                                                        <hr class="dropdown-divider">
                                                    </li>
                                                    <li>
                                                            @if (item.Name != "SuperAdmin")
                                                            {
                                                            <a style='margin-right:16px' asp-controller="Permission" asp-action="Index" asp-route-roleId="@item.Id" class="dropdown-item">
                                                                <i class="fas fa-wrench"></i> Manage Permissions
                                                            </a>
                                                            }
                                                    </li>
                                                   @*  <li>
                                                        <hr class="dropdown-divider">
                                                    </li> *@
                                                </ul><!-- End Profile Dropdown Items -->
                                            </div>
                                        </td>
                                    </tr>
                                    srNo++;
                                }
                            </tbody>
                        }
                    </table>
                    @if (Model is null)
                    {
                        <p class="alert alert-dismissible alert-info">
                            No Data
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        function functionConfirm(event,ItemName) {
            swal({
                title: 'Are you sure you want to delete..? : ' + ItemName,
                text: "You will not be able to recover this item",
                type: 'warning',
                showCancelButton: true,
                cancelButtonText: 'No',
                cancelButtonClass: 'btn btn-danger',
                showConfirmButton: true,
                confirmButtonText: 'Yes',
                confirmButtonClass: 'btn btn-success'
            }, function (isConfirm) {
                if (isConfirm) {
                    $('form').submit();
                    return true;
                } else {
                    return false;
                }
            });
            return false;
        }
    </script>
}



